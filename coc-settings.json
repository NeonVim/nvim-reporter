{
  "diagnostic.showUnused": false,
  "diagnostic.messageDelay": 0,
  "diagnostic.errorSign": "✘",
  "diagnostic.warningSign": "⚑",
  "diagnostic.infoSign": "",
  // Turn off styling, use plugins instead
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  "tsserver.log": "verbose",
  "tsserver.trace.server": "verbose",
  // Turn off suggestions for javascript files
  "javascript.suggestionActions.enabled": false,
  // Set linting for postgresql databases
  "sql.database": "postgresql",
  // Show ununsed variables
  "typescript.showUnused": true,
  "languageserver": {
    "terraform": {
      "command": "terraform-ls",
      "args": ["serve"],
      "filetypes": ["terraform", "tf"],
      "initializationOptions": {},
      "settings": {}
    }
  },
  "python.jediEnabled": false,
  "emmet.includeLanguages": {
    "markdown": "html",
    "jsx": "javascriptreact",
    "tsx": "typescript"
  },
  "coc.preferences.formatOnType": true,
  "emmet.excludeLanguages": [],
  "explorer.width": 40,
  "explorer.icon.enableNerdfont": true,
  "explorer.icon.source": "vim-devicons",
  "explorer.previewAction.onHover": false,
  // Don't warn about being able to find tsconfig.json file
  "vetur.ignoreProjectWarning": true,
  "coc.preferences.formatOnSaveFiletypes": ["*"],
  "eslint.autoFixOnSave": true,
  "eslint.probe": ["javascript", "json", "typescript", "typescriptreact", "javascriptreact"],
  "prettier.disableSuccessMessage": true,
  "prettier.singleQuote": true,
  "prettier.printWidth": 100
}
