{
  "diagnostic.showUnused": false,
  "diagnostic.messageDelay": 0,
  "diagnostic.errorSign": "✘",
  "diagnostic.warningSign": "⚑",
  "diagnostic.infoSign": "",
  /*"suggest.noselect": true, // Select first element in autocomplete list*/
  // Turn off styling, use plugins instead
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  "tsserver.log": "verbose",
  "tsserver.trace.server": "verbose",
  // Turn off suggestions for javascript files
  "javascript.suggestionActions.enabled": false,
  // Set linting for postgresql databases
  "sql.database": "postgresql",
  // Show ununsed variables
  "typescript.showUnused": true,
  "languageserver": {
    /* "terraform": { */
    /*   "command": "terraform-ls", */
    /*   "args": ["serve"], */
    /*   "filetypes": ["terraform", "tf"], */
    /*   "initializationOptions": {}, */
    /*   "settings": {} */
    /* }, */
    "graphql": {
      "command": "graphql-lsp",
      "args": ["server", "-m", "stream"],
      "filetypes": [
        "typescript",
        "typescriptreact",
        "graphql",
        "javascript",
        "javascriptreact"
      ]
    }
  },
  "python.jediEnabled": false,
  "emmet.includeLanguages": {
    "markdown": "html",
    "jsx": "javascriptreact",
    "tsx": "typescript"
  },
  /* "tsserver.formatOnType": true, */
  /* "coc.preferences.formatOnType": true, */
  "emmet.excludeLanguages": [],
  "explorer.width": 40,
  "explorer.icon.enableNerdfont": true,
  "explorer.icon.source": "vim-devicons",
  "explorer.previewAction.onHover": false,
  "explorer.keyMappings": {
    "<cr>": ["expandable?", ["expanded?", "collapse", "expand"], "open"]
  },
  "coc.preferences.formatOnSaveFiletypes": ["*"],
  "eslint.autoFixOnSave": true,
  "eslint.probe": [
    "javascript",
    "json",
    "typescript",
    "typescriptreact",
    "javascriptreact"
  ],
  "prettier.disableSuccessMessage": true,
  "prettier.singleQuote": true
}
